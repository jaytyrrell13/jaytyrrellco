---
import Link from '../components/Link.astro'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<title>{title} | jaytyrrell.co</title>
	</head>
	<body class="text-lg text-slate-950">
		<header class="bg-slate-700 border-b-slate-600 border-b-8">
			<nav class="container mx-auto py-6 max-w-5xl flex justify-between items-center">
				<div><a href="/" class="text-white text-xl px-4 py-2 ml-2 rounded-md hover:bg-slate-600 transition ease-linear duration-200">Jay Tyrrell</a></div>

				<div>
					<a href="/" class="text-white text-xl px-4 py-2 ml-2 rounded-md hover:bg-slate-600 transition ease-linear duration-200">About</a>
					<a href="/blog" class="text-white text-xl px-4 py-2 ml-2 rounded-md hover:bg-slate-600 transition ease-linear duration-200">Blog</a>
					<a href="/uses" class="text-white text-xl px-4 py-2 ml-2 rounded-md hover:bg-slate-600 transition ease-linear duration-200">Uses</a>
				</div>
			</nav>

			<div class="container mx-auto max-w-3xl py-8">
				<slot name="heading" />
			</div>
		</header>

		<main class="container mx-auto mt-8 max-w-3xl">
			<slot />
		</main>

		<footer class="container mx-auto max-w-3xl text-center border-t-2 border-t-slate-200 py-4 mt-12">
			<p class="text-sm">Copyright &copy; 2023 Jay Tyrrell. Built with <Link href="https://astro.build" target="_blank">Astro</Link> and <Link href="https://tailwindcss.com/" target="_blank">TailwindCSS</Link>. Hosted on <Link href="https://www.netlify.com/" target="_blank">Netlify</Link>.</p>
		</footer>
	</body>
</html>
